@model Portfolio.Pages.Admin.Projects.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Project</h4>
<hr />
<div>
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div> @* TODO: maybe remove validation *@
            <div>
                <label asp-for="Project.Name"></label>
                <input asp-for="Project.Name"/>
                <span asp-validation-for="Project.Name"></span>
            </div>
            <div>
                <label asp-for="Project.DateStarted"></label>
                <input asp-for="Project.DateStarted"/>
                <span asp-validation-for="Project.DateStarted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.DateEnded"></label>
                <input asp-for="Project.DateEnded"/>
                <span asp-validation-for="Project.DateEnded"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.File"></label>
                <input asp-for="Project.File"/>
                <span asp-validation-for="Project.File"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Thumbnail"></label>
                <input asp-for="Project.Thumbnail"/>
                <span asp-validation-for="Project.Thumbnail"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Project.Hidden" /> @Html.DisplayNameFor(model => model.Project.Hidden)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create"/>
            </div>
        </form>
    </div>
</div>

