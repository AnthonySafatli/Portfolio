@page
@model Portfolio.Pages.Admin.Projects.CreateModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="section center">
    <form method="post" class="normal-form" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div> 
        <div>
            <label asp-for="Project.Id"></label>
            <input asp-for="Project.Id"/>
            <span asp-validation-for="Project.Id"></span>
        </div>
        <div>
            <label asp-for="Project.DisplayName"></label>
            <input asp-for="Project.DisplayName" />
            <span asp-validation-for="Project.DisplayName"></span>
        </div>
        <div>
            <label asp-for="Project.DateStarted"></label>
            <input asp-for="Project.DateStarted"/>
            <span asp-validation-for="Project.DateStarted"></span>
        </div>
        <div class="form-group">
            <label asp-for="Project.DateEnded"></label>
            <input asp-for="Project.DateEnded"/>
            <span asp-validation-for="Project.DateEnded"></span>
        </div>
        <div class="form-group">
            <label asp-for="PageContentFile"></label>
            <input asp-for="PageContentFile" />
            <span asp-validation-for="PageContentFile"></span>
        </div>
        <div class="form-group">
            <label asp-for="Project.Thumbnail"></label>
            <input asp-for="Project.Thumbnail" accept=".json, .txt" />
            <span asp-validation-for="Project.Thumbnail"></span>
        </div>
        <div class="form-group">
            <label asp-for="Project.Hidden"></label>
            <input asp-for="Project.Hidden"/>
        </div>
        <div class="form-group">
            <label asp-for="Project.SortOrder"></label>
            <input asp-for="Project.SortOrder" />
            <span asp-validation-for="Project.SortOrder"></span>
        </div>
        <div>
            <label asp-for="Project.Description"></label>
            <textarea asp-for="Project.Description"></textarea>
            <span asp-validation-for="Project.Description"></span>
        </div>
        <div>
            <label asp-for="Project.Github"></label>
            <input asp-for="Project.Github" />
            <span asp-validation-for="Project.Github"></span>
        </div>
        <div>
            <label asp-for="Project.Page"></label>
            <input asp-for="Project.Page" />
            <span asp-validation-for="Project.Page"></span>
        </div>
        <div>
            <label asp-for="Project.Download"></label>
            <input asp-for="Project.Download" />
            <span asp-validation-for="Project.Download"></span>
        </div>
        <div class="uninclude">
            <button class="button" type="submit">Create</button>
        </div>
    </form>
</div>

<a class="button" asp-page="../Dashboard">Back to List</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
