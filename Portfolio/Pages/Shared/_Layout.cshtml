<!DOCTYPE html>
<html lang="en">
<head>
    @* Meta *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="robots" content="@ViewData["Robots"]">
    @if (ViewData.Keys.Contains("Description"))
    {
        <meta name="author" content="Anthony Safatli">
        <meta name="description" content="@ViewData["Description"]">
        @if (ViewData.Keys.Contains("Keywords"))
        {
            <meta name="keywords" content="@ViewData["Keywords"]">
        }
    
        <meta property="og:title" content="@ViewData["Title"] - Anthony Safatli" />
        <meta property="og:description" content="@ViewData["Description"]" />
        <meta property="og:image" content="https://anthonysafatli.ca/assets/globe-icon-open-graph.png" />
        <meta property="og:url" content="@ViewData["URL"]" />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content="@ViewData["Title"] - Anthony Safatli" />
        <meta name="twitter:description" content="@ViewData["Description"]" />
        <meta name="twitter:image" content="https://anthonysafatli.ca/assets/globe-icon-open-graph.png" />
    }

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="rating" content="General">

    <title>@ViewData["Title"] - Anthony Safatli</title>
    <link rel="icon" type="image/png" href="~/assets/globe icon.png">

    @* CSS *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @await RenderSectionAsync("Styles", required: false)

    @* Fonts *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
</head>
<body>
    <canvas class="webgl"></canvas>

    <header>
        <!-- TODO: Logo + icon -->
        <nav>
            <a asp-page="\Index">Home</a>
            <a asp-page="\Projects">Projects</a>
            <a asp-page="\AboutMe">About Me</a>
            <a asp-page="\Contact">Contact</a>
            @if (User.Identity.IsAuthenticated) 
            {
                <a asp-page="\Admin\Dashboard">Admin</a>
            }
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <span>
            &copy; 2024 - Anthony Safatli
        </span>

        <nav>
            <a href="https://github.com/AnthonySafatli" class="fa fa-github" target="_blank"></a>
            <a href="https://www.instagram.com/anthonysafatli124/" class="fa fa-instagram" target="_blank"></a>
            <a href="https://www.linkedin.com/in/anthony-safatli-755823296/" class="fa fa-linkedin" target="_blank"></a>
            <a href="mailto:anthonysafatli@dal.ca" class="fa fa-envelope"></a>
        </nav>
    </footer>

    <script>var globePos = [@ViewData["Globe X"], @ViewData["Globe Y"], @ViewData["Globe Z"]];</script>
    <script>var lowColour = [12/255, 172/255, 190/255]; var highColour = [145/255, 242/255, 242/255]; var wireColour = 0x203030;</script>
    <script>var globeOpacity = @ViewData["Globe Opacity"]</script>
    <script src="~/dist/site.bundle.js" asp-append-version="true"></script>
    <script src="~/dist/background.bundle.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>