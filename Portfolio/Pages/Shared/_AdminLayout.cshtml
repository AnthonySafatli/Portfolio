<!DOCTYPE html>
<html>
<head>
    @* Meta *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Admin</title>

    @* CSS *@
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

    @* Fonts *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400..800&display=swap" rel="stylesheet">
</head>
<body>
    <canvas class="webgl"></canvas>

    <header>
        <span>Admin Zone</span>

        <form method="post" asp-page="/Admin/Logout">
            <button class="button" type="submit">Logout</button>
        </form>
    </header>

    <main>
        @RenderBody()
    </main>

    <script>var globePos = [0, -0.1, -4];</script>
    <script>var lowColour = [0.5, 0.5, 0.5]; var highColour = [0.9, 0.9, 0.9]; var wireColour = 0x303030;</script>
    <script>var globeOpacity = 0.5;</script>
    <script src="~/dist/background.bundle.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
