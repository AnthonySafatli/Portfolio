@page
@model Portfolio.Pages.CMS.Files.MarkdownModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Upload Markdown";
}

<h1>Upload Markdown File</h1>

<div class="section center">
    <form class="normal-form" method="post" enctype="multipart/form-data">
        <div>
            <label asp-for="File"></label>
            <input asp-for="File" accept=".jpg, .png" />
        </div>
        <div>
            <label asp-for="Name"></label>
            <div class="center">
                <input asp-for="Name" />
                <span>.md</span>
            </div>
        </div>
        <div class="uninclude">
            <button class="button" type="submit">Upload</button>
        </div>
    </form>
</div>

<a class="button" asp-page="../Dashboard">Back to Dashboard</a>